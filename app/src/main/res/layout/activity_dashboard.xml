<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bloodbrothers.abdulahad.psl4.Dashboard">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ViewFlipper
            android:id="@+id/flipper"
            android:padding="3dp"
            android:layout_width="fill_parent"
            android:background="@drawable/border"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"
            android:layout_height="230sp">
        </ViewFlipper>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/id_matchSchedule"
                android:layout_width="160dp"
                android:layout_height="130dp"
                android:layout_margin="5dp"
                android:layout_weight="0.1"
                android:drawableTop="@drawable/schedule"
                android:background="@drawable/roundedbutton"
                android:padding="7dp"
                android:text="Schedule "
                android:textStyle="bold"

                />

            <Button
                android:background="@drawable/roundedbutton"
                android:id="@+id/id_stadiumDetail"
                android:layout_width="159dp"
                android:layout_height="130dp"
                android:layout_margin="5dp"
                android:layout_weight="0.1"
                android:drawableTop="@drawable/stadium"
                android:padding="7dp"
                android:text="Stadium"
                android:textStyle="bold" />



        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/roundedbutton"
            android:id="@+id/id_liveScore"
            android:layout_width="129dp"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:layout_weight="0.1"
            android:drawableTop="@drawable/livescore"
            android:padding="7dp"
            android:text="Live Score"
            android:textStyle="bold" />

        <Button
            android:background="@drawable/roundedbutton"
            android:padding="7dp"
            android:layout_width="129dp"
            android:layout_height="130dp"
            android:text="Points Table"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:drawableTop="@drawable/points"
            android:layout_weight="0.1"
            android:id="@+id/id_pointTable"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:background="@drawable/roundedbutton"
                android:padding="7dp"
                android:layout_width="129dp"
                android:layout_height="130dp"
                android:text="Teams/Squad "
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:drawableTop="@drawable/team"
                android:layout_weight="1"
                android:id="@+id/id_allTeam"
                />

            <Button
                android:background="@drawable/roundedbutton"
                android:padding="7dp"
                android:layout_width="129dp"
                android:layout_height="130dp"
                android:text="Previous Champs"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:drawableTop="@drawable/champ"
                android:layout_weight="1"
                android:id="@+id/id_previousChamp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:background="@drawable/roundedbutton"
                android:padding="7dp"
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:text="Rate us "
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:drawableTop="@drawable/rateus"
                android:layout_weight="0.5"
                android:id="@+id/id_rateus"
                />


        </LinearLayout>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-6134982693737903/5044648200">
        </com.google.android.gms.ads.AdView>




    </LinearLayout>

</ScrollView>
